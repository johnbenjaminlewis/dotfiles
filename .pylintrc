# PyLint configuration file

[BASIC]
good-names=c,e,f,fh,i,j,k,r,ex,exc,R,Run,T,_

[FORMAT]
# 2 spaces
indent-string='  '
max-line-length=79

[MESSAGES CONTROL]
# Disable the following PyLint messages:
# C0330 - bad-continuation wrong hanging indentation
# E1101 - Has no member (countless false-positives)
# R0903 - Not enough public methods
# R0904 - Too many public methods
# W0105 - String statement has no effect # often used for after-line doc
# W0142 - Used * or ** magic
# W0232 - Class has no __init__ method
# W0212 - Access to a protected member ... of a client class
# W0613 - Unused argument
disable-msg=C0330,R0903,R0904,W0142,W0105,W0212,W0613,E1101

[REPORTS]
# set the output format. Available formats are text, parseable, colorized and
# html
output-format=colorized

[MISCELLANEOUS]
# List of note tags to take in consideration, separated by a comma.
# FIXME -- something which needs fixing
# TODO  -- future plan
# XXX   -- some concern
# YYY   -- comment/answer to above mentioned concern
notes=FIXME,TODO,XXX,YYY
