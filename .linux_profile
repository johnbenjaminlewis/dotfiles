## This is my osx runtime configuration file

# source base profile config
BASE_PROFILE="$HOME/.base_profile"

if [[ -f "$BASE_PROFILE" ]];
then
  . "$BASE_PROFILE"
fi

# Custom PATH for osx
export PATH="/opt/local/bin:/opt/local/libexec/gnubin:$PATH"

## Set up mouse button definitions

synclient PalmDetect=1 > /dev/null 2> /dev/null
synclient RBCornerButton=2 > /dev/null 2> /dev/null
